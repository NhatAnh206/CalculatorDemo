<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/d_100" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt_ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="AC"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="C"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_per"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="%"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:text="/"
            android:textSize="@dimen/d_30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="7"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="8"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="9"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:text="X"
            android:textSize="@dimen/d_30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="4"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="5"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="6"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:text="-"
            android:textSize="@dimen/d_30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="1"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="2"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="3"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_sum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:text="+"
            android:textSize="@dimen/d_30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@color/colorGray"
            android:text="0"
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt.dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text=","
            android:textSize="@dimen/d_30" />

        <Button
            android:id="@+id/bt_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:text="="
            android:textSize="@dimen/d_30" />

    </TableRow>

</LinearLayout>

